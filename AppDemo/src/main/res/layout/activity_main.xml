<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Reporting"
        android:id="@+id/location"
        android:onClick="StartLocationReporting" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share"
        android:id="@+id/growth"
        android:onClick="Growth" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="startBeaconMonitoring"
          android:id="@+id/beacon"
          android:onClick="startBeaconMonitoring" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Second Activity"
          android:id="@+id/secondActivity"
          android:onClick="NextActivity" />

  </LinearLayout>

</LinearLayout>
