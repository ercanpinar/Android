<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="InstallId"
      android:id="@+id/textView2" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:id="@+id/installid" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="AppKey"
          android:id="@+id/textView3" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:id="@+id/appkey" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:text="Server"
          android:id="@+id/textView4" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:id="@+id/server" />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Reporting"
        android:id="@+id/location"
        android:onClick="StartLocationReporting" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share"
        android:id="@+id/growth"
        android:onClick="Growth" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="startBeaconMonitoring"
          android:id="@+id/beacon"
          android:onClick="startBeaconMonitoring" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Second Activity"
          android:id="@+id/secondActivity"
          android:onClick="NextActivity" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Third Activity"
          android:id="@+id/thirdactivity"
          android:onClick="ThirdActivity" />

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="KFactor test"
          android:id="@+id/kfactor"
          android:onClick="kfactor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="key"
        android:id="@+id/key" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="value"
        android:id="@+id/value" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:onClick="SendTag"
        android:id="@+id/tag" />
  </LinearLayout>
</ScrollView>

</LinearLayout>
